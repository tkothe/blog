<h1>Listing posts:</h1>
<div class="link_new_post"> <%= link_to 'New Post', new_post_path %> </div>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'are you sure?' } %></td>
  </tr>
<% end %>
</table>
<div class="Box"></div>
